selector
{
	behavior unstick
	behavior use_medkit

	sequence
	{
		condition alertedToEnemy
		selector
		{
			decorator timer( 1000 )
			{
				sequence
				{
					condition ( healScore <= 0.5 && percentHealth( E_GOAL ) > 0.3  && random > 0.3 )
					action heal
				}
			}

			action fight
		}
	}

	sequence
	{
		condition !haveUpgrade( UP_MEDKIT )
		condition healScore <= 0.25
		action heal
	}

	action equip

	action roam
}
